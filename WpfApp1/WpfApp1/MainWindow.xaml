<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="label1" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid x:Name="grid" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="182">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="D1" Grid.Row="0" Style="{Binding Source={StaticResource label1}}" />
            <Label Content="D2" Grid.Row="1" Style="{Binding Source={StaticResource label1}}"/>
            <Label Content="D3" Grid.Row="2" Style="{Binding Source={StaticResource label1}}"/>
            <Label Content="D4" Grid.Row="3" Style="{Binding Source={StaticResource label1}}"/>
            <Label Content="D5" Grid.Row="4" Style="{Binding Source={StaticResource label1}}"/>
            <Label Content="D6" Grid.Row="5" Style="{Binding Source={StaticResource label1}}"/>
            <Label Content="D7" Grid.Row="6" Style="{Binding Source={StaticResource label1}}"/>

            <Label Content="{Binding ThisFlightTable[0].ScheduledFlight}" Style="{Binding Source={StaticResource label1}}" Grid.Column="1" />
            <Label Content="{Binding ThisFlightTable[1].ScheduledFlight}" Grid.Row="1" Style="{Binding Source={StaticResource label1}}" Grid.Column="1"/>
            <Label Content="{Binding ThisFlightTable[2].ScheduledFlight}" Grid.Row="2" Style="{Binding Source={StaticResource label1}}"  Grid.Column="1"/>
            <Label Content="{Binding ThisFlightTable[3].ScheduledFlight}" Grid.Row="3" Style="{Binding Source={StaticResource label1}}"  Grid.Column="1"/>
            <Label Content="{Binding ThisFlightTable[4].ScheduledFlight}" Grid.Row="4" Style="{Binding Source={StaticResource label1}}"  Grid.Column="1"/>
            <Label Content="{Binding ThisFlightTable[5].ScheduledFlight}" Grid.Row="5" Style="{Binding Source={StaticResource label1}}"  Grid.Column="1"/>
            <Label Content="{Binding ThisFlightTable[6].ScheduledFlight}" Grid.Row="6" Style="{Binding Source={StaticResource label1}}"  Grid.Column="1"/>
        </Grid>
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="417,0,0,0">

        </StackPanel>
        <Button Content="Set135" HorizontalAlignment="Left" Margin="417,255,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Set246" HorizontalAlignment="Left" Margin="417,279,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="daysettle" Content="DaySettle" HorizontalAlignment="Left" Margin="187,279,0,0" VerticalAlignment="Top" Width="75" Click="daysettle_Click"/>
        <Label  Content="TotalDays:" HorizontalAlignment="Left" Margin="222,0,0,0" VerticalAlignment="Top"/>
        <Label x:Name="totaldayslabel" Content="{Binding TotalDays}" HorizontalAlignment="Left" Margin="296,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Day:" HorizontalAlignment="Left" Margin="222,30,0,0" VerticalAlignment="Top"/>
        <Label x:Name="currentday" Content="{Binding CurrentDay}" HorizontalAlignment="Left" Margin="296,30,0,0" VerticalAlignment="Top"/>
        <Label  Content="Scheduled" HorizontalAlignment="Left" Margin="222,60,0,0" VerticalAlignment="Top"/>
        <Label x:Name="flightlabel" Content="{Binding ScheduledFlight}" HorizontalAlignment="Left" Margin="321,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="settle30day" Content="Settle30" HorizontalAlignment="Left" Margin="187,255,0,0" VerticalAlignment="Top" Width="75" Click="settle30day_Click"/>
        <Label  Content="TotalIncome" HorizontalAlignment="Left" Margin="222,83,0,0" VerticalAlignment="Top"/>
        <Label x:Name="totalincomelabel"  HorizontalAlignment="Left" Margin="321,83,0,0" VerticalAlignment="Top"/>



    </Grid>
</Window>
