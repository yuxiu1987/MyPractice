<Page x:Class="mahappsMetroNavigationTest.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mahappsMetroNavigationTest"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      ShowsNavigationUI="False"
      Title="Page1">
    <Page.Resources>
        <Style x:Key="button" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Background="LightGray">
        <Button Content="Button" HorizontalAlignment="Left" Margin="92,183,0,0" VerticalAlignment="Top" Style="{StaticResource button}"/>

    </Grid>
</Page>
